<UserControl x:Class="CLAIM.VerifyClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Verify Claims"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,0,0,20"/>

            <DataGrid x:Name="ClaimsGrid" AutoGenerateColumns="False" Height="300" Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="*"/>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="*"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Verify Selected Claim"
                    Width="200" Height="40"
                    Background="#2C3E50" Foreground="White"
                    Click="VerifyButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>