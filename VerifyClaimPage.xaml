<UserControl x:Class="CLAIM.VerifyClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="20">

        <!-- ✅ Add ScrollViewer here -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Verify Claims"
                           FontSize="24" FontWeight="Bold"
                           Foreground="#2C3E50" Margin="0,0,0,20"/>

                <DataGrid x:Name="ClaimsGrid" AutoGenerateColumns="False" Height="300" Margin="0,0,0,20"
                         CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Claim ID" Binding="{Binding Id}" Width="100"/>
                        <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                        <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="100"/>
                        <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="80"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=R{0:N2}}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat=MM/dd/yyyy}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Verify Selected Claim" Width="180" Height="40"
                            Background="#3498db" Foreground="White" FontWeight="Bold"
                            Click="VerifyButton_Click" Margin="0,0,10,0"/>
                    <Button Content="Refresh List" Width="120" Height="40"
                            Background="#95a5a6" Foreground="White" FontWeight="Bold"
                            Click="RefreshButton_Click"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        <!-- ✅ End ScrollViewer -->

    </Grid>
</UserControl>
