<UserControl x:Class="CLAIM.UploadDocumentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLAIM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#9B59B6" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Upload Supporting Documents" FontSize="22" FontWeight="Bold"
                           Foreground="#9B59B6" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Button Content="Browse Files..." Width="200" Margin="0,10,0,0" HorizontalAlignment="Center"
                        Background="#9B59B6" Foreground="White"/>

                <ListBox Height="150" Margin="0,20,0,0">
                    <ListBoxItem Content="No files uploaded yet"/>
                </ListBox>

                <Button Content="Upload" Width="200" Margin="0,20,0,0" HorizontalAlignment="Center"
                        Background="#8E44AD" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
