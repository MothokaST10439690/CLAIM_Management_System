<UserControl x:Class="CLAIM.UploadDocumentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#1ABC9C" BorderThickness="2">

            <!-- ✅ Wrap content here -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Upload Documents" FontSize="22" FontWeight="Bold"
                               Foreground="#1ABC9C" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <!-- Lecturer Name -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="Lecturer Name:" Width="150" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBox x:Name="LecturerNameTextBox" Width="200"/>
                    </StackPanel>

                    <!-- File List -->
                    <StackPanel Orientation="Vertical" Margin="0,10">
                        <TextBlock Text="Selected Files:" FontWeight="SemiBold"/>
                        <ListBox x:Name="FilesListBox" Height="150" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center" >
                        <Button Content="Add Files" Width="100" Background="#1ABC9C" Foreground="White"
                                Click="AddFilesButton_Click"/>
                        <Button Content="Remove File" Width="100" Background="#e74c3c" Foreground="White"
                                Click="RemoveFileButton_Click"/>
                        <Button Content="Attach Files" Width="100" Background="#27ae60" Foreground="White"
                                Click="AttachFilesButton_Click"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Border>
    </Grid>
</UserControl>
