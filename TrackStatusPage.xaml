<UserControl x:Class="CLAIM.TrackStatusPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLAIM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Define the converter as a resource -->
    <UserControl.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#E67E22" BorderThickness="2">

            <!-- ✅ Add ScrollViewer -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Track Claim Status" FontSize="22" FontWeight="Bold"
                               Foreground="#E67E22" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <ListView x:Name="ClaimsListView" Height="250" BorderBrush="#E67E22" BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Month" Width="100" DisplayMemberBinding="{Binding Month}"/>
                                <GridViewColumn Header="Lecturer" Width="150" DisplayMemberBinding="{Binding LecturerName}"/>
<GridViewColumn Header="Amount" Width="100" DisplayMemberBinding="{Binding TotalAmount, StringFormat=R{0:N2}}"/>                                <GridViewColumn Header="Status" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                                    Padding="5,2" CornerRadius="10">
                                                <TextBlock Text="{Binding Status}" Foreground="White" 
                                                           FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Last Updated" Width="150" DisplayMemberBinding="{Binding SubmissionDate, StringFormat=MM/dd/yyyy}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Content="Refresh Status" Width="150" Margin="0,20,0,0" HorizontalAlignment="Center"
                            Background="#E67E22" Foreground="White" Click="RefreshButton_Click"
                            FontWeight="Bold" Height="35"/>
                </StackPanel>
            </ScrollViewer>
            <!-- ✅ End ScrollViewer -->

        </Border>
    </Grid>
</UserControl>
