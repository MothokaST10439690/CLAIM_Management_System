<UserControl x:Class="CLAIM.TrackStatusPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLAIM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#E67E22" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Track Claim Status" FontSize="22" FontWeight="Bold"
                           Foreground="#E67E22" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <ListView Height="250" BorderBrush="#E67E22">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Claim ID" Width="100"/>
                            <GridViewColumn Header="Month" Width="150"/>
                            <GridViewColumn Header="Status" Width="200"/>
                            <GridViewColumn Header="Last Updated" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
