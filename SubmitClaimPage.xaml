<UserControl x:Class="CLAIM.SubmitClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLAIM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#1ABC9C" BorderThickness="2" >
            <StackPanel>
                <TextBlock Text="Submit Monthly Claim" FontSize="22" FontWeight="Bold"
                           Foreground="#1ABC9C" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Month:" Width="150" VerticalAlignment="Center"/>
                    <ComboBox Width="200">
                        <ComboBoxItem Content="January"/>
                        <ComboBoxItem Content="February"/>
                        <ComboBoxItem Content="March"/>
                        <!-- Add all months -->
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Year:" Width="150" VerticalAlignment="Center"/>
                    <TextBox Width="200" Text="Enter Year"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Total Hours Worked:" Width="150" VerticalAlignment="Center"/>
                    <TextBox Width="200" Text="Enter Hours"/>
                </StackPanel>

                <Button Content="Submit Claim" Background="#1ABC9C" Foreground="White"
                        Width="200" Margin="0,20,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
