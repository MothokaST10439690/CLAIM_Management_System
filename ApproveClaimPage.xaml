<UserControl x:Class="CLAIM.ApproveClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Approve Claims"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,0,0,20"/>

            <DataGrid x:Name="ClaimsGrid" AutoGenerateColumns="False" Height="300" Margin="0,0,0,20"
                     CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="120"/>
                    <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="80"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="60"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridTextColumn Header="Verified By" Binding="{Binding VerifiedBy}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Approve Selected" Width="150" Height="40"
                        Background="#27ae60" Foreground="White" FontWeight="Bold"
                        Click="ApproveButton_Click" Margin="0,0,10,0"/>
                <Button Content="Reject Selected" Width="150" Height="40"
                        Background="#e74c3c" Foreground="White" FontWeight="Bold"
                        Click="RejectButton_Click" Margin="0,0,10,0"/>
                <Button Content="Refresh" Width="100" Height="40"
                        Background="#95a5a6" Foreground="White" FontWeight="Bold"
                        Click="RefreshButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>