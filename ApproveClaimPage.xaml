<UserControl x:Class="CLAIM.ApproveClaimPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CLAIM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#3498DB" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Approve or Reject Claims" FontSize="22" FontWeight="Bold"
                           Foreground="#3498DB" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <ListBox Height="200" BorderBrush="#3498DB">
                    <ListBoxItem Content="Claim #001 - Pending"/>
                    <ListBoxItem Content="Claim #002 - Pending"/>
                    <ListBoxItem Content="Claim #003 - Pending"/>
                </ListBox>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button Content="Approve" Width="120" Margin="5" Background="#2ECC71" Foreground="White"/>
                    <Button Content="Reject" Width="120" Margin="5" Background="#E74C3C" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
